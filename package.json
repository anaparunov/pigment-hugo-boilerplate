{
  "name": "pigment-hugo-boilerplate",
  "version": "2.1.1",
  "description": "hugo boilerplate for creating static site",
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "rimraf public/",
    "mkdirs": "mkdirp public/",
    "dev:script": "watchify -d -t babelify -t localenvify -e src/script/app.js -o site/static/app.js",
    "dev:style": "node-sass --include-path=node_modules --watch src/style/main.scss site/static/main.css",
    "dev:hugo": "env HUGO_ENV='DEV' hugo server -D --config config.toml",
    "dev": "run-p dev:script dev:style dev:hugo",
    "build:script": "browserify -t babelify -p [tinyify --no-flat] -e src/script/app.js > public/app.js",
    "build:style": "node-sass --include-path=node_modules src/style/main.scss | cleancss -O1 all > public/main.css",
    "build:hugo": "env HUGO_ENV='PROD' hugo --config config.toml",
    "prebuild": "run-s clean mkdirs",
    "build": "run-s build:hugo build:script build:style"
  },
  "author": "Ana Parunov",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "10",
    "yarn": "1"
  },
  "devDependencies": {
    "eslint": "^4.17.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "localenvify": "^1.0.1",
    "rimraf": "^2.6.3",
    "watch": "^1.0.2",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "acorn": "^6.1.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "clean-css-cli": "^4.3.0",
    "envify": "^4.0.0",
    "jquery": "^3.4.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.2",
    "sanitize.scss": "^1.0.0",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.3.0",
    "tinyify": "^2.4.0",
    "uglify-es": "^3.3.10"
  }
}
